				</TableHeaders>
				<TableRowEntries>
					<TableRowEntry>
						<TableColumnItems>
							<TableColumnItem><PropertyName>GameNumber</PropertyName></TableColumnItem>
							<TableColumnItem><PropertyName>Doors</PropertyName></TableColumnItem>
							<TableColumnItem><PropertyName>Player1(change_true)</PropertyName></TableColumnItem>
							<TableColumnItem><PropertyName>Player2(change_false)</PropertyName></TableColumnItem>
							<TableColumnItem><PropertyName>Player1Steps</PropertyName></TableColumnItem>
