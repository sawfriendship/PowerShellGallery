						</TableColumnItems>
					</TableRowEntry>
				</TableRowEntries>
            </TableControl>
        </View>
		
		<!-- ################ LIST DEFINITIONS ################ -->
		<View>
			<Name>MontyHall.Stat</Name>
			<ViewSelectedBy><TypeName>MontyHall.Stat</TypeName></ViewSelectedBy>
			<ListControl>
				<ListEntries>
					<ListEntry>
					<ListItems>
						<ListItem><PropertyName>GameNumber</PropertyName></ListItem>
						<!-- <ListItem><Label>GameNumber</Label><Scriptblock>($_.GameNumber * 1000)</Scriptblock></ListItem> -->
