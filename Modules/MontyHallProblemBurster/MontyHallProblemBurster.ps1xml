						<ListItem><Label>Player1(change_true)</Label><PropertyName>Player1(change_true)</PropertyName></ListItem>
						<ListItem><Label>Player2(change_false)</Label><PropertyName>Player2(change_false)</PropertyName></ListItem>
						<ListItem><Label>Player1Steps</Label><PropertyName>Player1Steps</PropertyName></ListItem>
						<ListItem><Label>Player2Steps</Label><PropertyName>Player2Steps</PropertyName></ListItem>
					</ListItems>
					</ListEntry>
				</ListEntries>
			</ListControl>
